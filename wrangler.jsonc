/**
 * For more details on how to configure Wrangler, refer to:
 * https://developers.cloudflare.com/workers/wrangler/configuration/
 */
{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "growthopsai",
	"compatibility_date": "2025-04-04",
	"compatibility_flags": ["nodejs_compat"],
	"main": "./workers/app.ts",
	"observability": {
		"enabled": true,
	},
	"assets": {
		"directory": "./dist",
		"run_worker_first": ["/api/*"],
		"not_found_handling": "single-page-application",
	},
	"d1_databases": [
		{
			"binding": "DB",
			"database_name": "growthopsai",
			"database_id": "123",
		},
	],
	"r2_buckets": [
		{
			"binding": "ARTIFACTS",
			"bucket_name": "growthops-artifacts",
		},
	],
	"vectorize": [
		{
			"binding": "VECTORIZE",
			"index_name": "growthopsai-knowledge",
			"remote": true,
		},
	],
	"durable_objects": {
		"bindings": [
			{
				"name": "CAMPAIGN_DO",
				"class_name": "CampaignDO",
			},
		],
	},
	"workflows": [
		{
			"name": "growthops-workflow",
			"binding": "GROWTHOPS_WORKFLOW",
			"class_name": "GrowthOpsWorkflow",
		},
		{
			"name": "intake-workflow",
			"binding": "INTAKE_WORKFLOW",
			"class_name": "IntakeWorkflow",
		},
		{
			"name": "event-scout-workflow",
			"binding": "EVENT_SCOUT_WORKFLOW",
			"class_name": "EventScoutWorkflow",
		},
	],
	"migrations": [
		{
			"tag": "v1",
			"new_classes": ["CampaignDO"],
		},
	],
}
